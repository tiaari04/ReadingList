<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".LibraryBookDetails"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="   Book Details"
        android:fontFamily="@font/inter_medium"
        android:textSize="30dp"
        android:paddingTop="15dp"
        android:textColor="@color/black"
        android:id="@+id/book_details_library_textview"
        />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="190dp"
        android:id="@+id/image_lbd"
        android:layout_margin="10dp"
        android:src="@drawable/ic_image_not_found"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/bookName_lbd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Title"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:fontFamily="@font/inter_medium"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/bookAuthor_lbd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="By Author"
        android:textStyle="italic"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:fontFamily="@font/inter_medium"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/ISBN_lbd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:text="ISBN:"
        android:fontFamily="@font/inter_medium"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/read_status_lbd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pubYear_bd"
        android:layout_margin="3dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:text="Read Status:"
        android:fontFamily="@font/inter_medium"
        android:layout_gravity="center_horizontal"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/delete_from_lib_btn"
        android:text="Delete from Library"
        android:textColor="@color/white"
        android:fontFamily="@font/inter_medium"
        android:layout_margin="8dp"
        android:backgroundTint="@color/purple"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/back_to_library_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:fontFamily="@font/inter_medium"
        android:text="Back To Library"
        android:backgroundTint="@color/purple"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"/>

    <Spinner
        android:id="@+id/read_status_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:ems="10"
        android:padding="10dp"
        android:spinnerMode="dropdown"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black"
        />

    <Button
        android:id="@+id/done_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:fontFamily="@font/inter_medium"
        android:text="Done"
        android:backgroundTint="@color/purple"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"/>



</LinearLayout>